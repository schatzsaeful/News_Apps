<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Tab Layout-->
    <style name="MyCustomTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/sen_bold</item>
        <item name="android:fontFamily">@font/sen_bold</item>
    </style>

    <style name="MyTransparentBottomSheetDialogTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialogTransparentStyle" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="CommonMediumRoundedImageView">
        <item name="cornerSize">25%</item>
    </style>

    <style name="CommonBigRoundedImageView">
        <item name="cornerSize">50%</item>
    </style>

    <!--Text View-->
    <style name="PrimaryReguler10TextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sen_regular</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">10sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="NavyReguler10TextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sen_regular</item>
        <item name="android:textColor">@color/purple_navy</item>
        <item name="android:textSize">10sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="WhiteMedium12TextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sen_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PrimaryMedium16TextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sen_medium</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="GrayRegular12TextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sen_regular</item>
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BlueBold12TextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sen_bold</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PrimaryBold20TextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sen_bold</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SecondaryMedium14TextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sen_medium</item>
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PrimaryRegular16TextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sen_medium</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="WhiteBold18TextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sen_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--Text Input Layout-->
    <style name="CommonTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/space_x3</item>
        <item name="boxCornerRadiusTopEnd">@dimen/space_x3</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/space_x3</item>
        <item name="boxCornerRadiusBottomStart">@dimen/space_x3</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <!--Button-->
    <style name="CommonButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/space_x8</item>
        <item name="fontFamily">@font/sen_bold</item>
        <item name="rippleColor">?colorControlHighlight</item>
    </style>

    <style name="CommonInputTextCard" parent="Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cardCornerRadius">360dp</item>
        <item name="cardElevation">16dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#D3DAE8</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:outlineAmbientShadowColor">#8E9FC3</item>
        <item name="android:outlineSpotShadowColor">#8E9FC3</item>
    </style>

</resources>
